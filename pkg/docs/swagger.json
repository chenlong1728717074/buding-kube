{
    "schemes": [
        "http",
        "https"
    ],
    "swagger": "2.0",
    "info": {
        "description": "buding-kube api文档",
        "title": "buding-kube",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8888",
    "basePath": "/",
    "paths": {
        "/api/auth/login": {
            "post": {
                "description": "用户登录，返回用户信息和Token",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "用户认证"
                ],
                "summary": "用户登录",
                "parameters": [
                    {
                        "description": "登录参数，包含用户名（username）和密码（password）",
                        "name": "login",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/dto.LoginDTO"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "登录成功",
                        "schema": {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/vo.Response"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#/definitions/vo.UserVO"
                                        }
                                    }
                                }
                            ]
                        }
                    },
                    "400": {
                        "description": "参数绑定错误",
                        "schema": {
                            "$ref": "#/definitions/vo.Response"
                        }
                    },
                    "500": {
                        "description": "登录失败",
                        "schema": {
                            "$ref": "#/definitions/vo.Response"
                        }
                    }
                }
            }
        },
        "/api/user": {
            "get": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "根据查询条件获取用户列表，支持分页",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "用户管理"
                ],
                "summary": "获取用户列表",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "页码，默认1",
                        "name": "page",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "description": "每页数量，默认10",
                        "name": "pageSize",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "搜索关键词",
                        "name": "keyword",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "用户名，精确匹配",
                        "name": "username",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "description": "角色，1=超级管理员 2=管理员 3=普通用户",
                        "name": "role",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "description": "状态，1=正常 0=禁用",
                        "name": "status",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "获取成功",
                        "schema": {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/vo.Response"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "allOf": [
                                                {
                                                    "$ref": "#/definitions/vo.PageResponse"
                                                },
                                                {
                                                    "type": "object",
                                                    "properties": {
                                                        "items": {
                                                            "type": "array",
                                                            "items": {
                                                                "$ref": "#/definitions/vo.UserVO"
                                                            }
                                                        }
                                                    }
                                                }
                                            ]
                                        }
                                    }
                                }
                            ]
                        }
                    },
                    "400": {
                        "description": "参数绑定错误",
                        "schema": {
                            "$ref": "#/definitions/vo.Response"
                        }
                    },
                    "401": {
                        "description": "未授权",
                        "schema": {
                            "$ref": "#/definitions/vo.Response"
                        }
                    },
                    "500": {
                        "description": "获取失败",
                        "schema": {
                            "$ref": "#/definitions/vo.Response"
                        }
                    }
                }
            },
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "创建新用户",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "用户管理"
                ],
                "summary": "创建用户",
                "parameters": [
                    {
                        "description": "用户信息",
                        "name": "user",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/dto.CreateUserDTO"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "创建成功",
                        "schema": {
                            "$ref": "#/definitions/vo.Response"
                        }
                    },
                    "400": {
                        "description": "参数绑定错误",
                        "schema": {
                            "$ref": "#/definitions/vo.Response"
                        }
                    },
                    "401": {
                        "description": "未授权",
                        "schema": {
                            "$ref": "#/definitions/vo.Response"
                        }
                    },
                    "500": {
                        "description": "创建失败",
                        "schema": {
                            "$ref": "#/definitions/vo.Response"
                        }
                    }
                }
            }
        },
        "/api/user/{username}": {
            "get": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "根据用户名获取用户详情",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "用户管理"
                ],
                "summary": "获取用户信息",
                "parameters": [
                    {
                        "type": "string",
                        "description": "用户名",
                        "name": "username",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "获取成功",
                        "schema": {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/vo.Response"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#/definitions/vo.UserVO"
                                        }
                                    }
                                }
                            ]
                        }
                    },
                    "400": {
                        "description": "参数绑定错误",
                        "schema": {
                            "$ref": "#/definitions/vo.Response"
                        }
                    },
                    "401": {
                        "description": "未授权",
                        "schema": {
                            "$ref": "#/definitions/vo.Response"
                        }
                    },
                    "500": {
                        "description": "获取失败",
                        "schema": {
                            "$ref": "#/definitions/vo.Response"
                        }
                    }
                }
            },
            "put": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "更新用户信息（不能修改用户名）",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "用户管理"
                ],
                "summary": "更新用户",
                "parameters": [
                    {
                        "type": "string",
                        "description": "用户名（不可修改）",
                        "name": "username",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "用户信息",
                        "name": "user",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/dto.UpdateUserDTO"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "更新成功",
                        "schema": {
                            "$ref": "#/definitions/vo.Response"
                        }
                    },
                    "400": {
                        "description": "参数绑定错误",
                        "schema": {
                            "$ref": "#/definitions/vo.Response"
                        }
                    },
                    "401": {
                        "description": "未授权",
                        "schema": {
                            "$ref": "#/definitions/vo.Response"
                        }
                    },
                    "500": {
                        "description": "更新失败",
                        "schema": {
                            "$ref": "#/definitions/vo.Response"
                        }
                    }
                }
            },
            "delete": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "删除用户（不能删除自己或超级管理员）",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "用户管理"
                ],
                "summary": "删除用户",
                "parameters": [
                    {
                        "type": "string",
                        "description": "用户名",
                        "name": "username",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "删除成功",
                        "schema": {
                            "$ref": "#/definitions/vo.Response"
                        }
                    },
                    "401": {
                        "description": "未授权",
                        "schema": {
                            "$ref": "#/definitions/vo.Response"
                        }
                    },
                    "500": {
                        "description": "删除失败",
                        "schema": {
                            "$ref": "#/definitions/vo.Response"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "dto.CreateUserDTO": {
            "type": "object",
            "required": [
                "password",
                "role",
                "username"
            ],
            "properties": {
                "email": {
                    "description": "邮箱",
                    "type": "string",
                    "example": "zhangsan@example.com"
                },
                "password": {
                    "description": "密码，用户登录密码",
                    "type": "string",
                    "example": "123456"
                },
                "role": {
                    "description": "角色: 1=超级管理员 2=管理员 3=普通用户",
                    "allOf": [
                        {
                            "$ref": "#/definitions/model.UserRole"
                        }
                    ],
                    "example": 2
                },
                "username": {
                    "description": "用户名，用户登录账号",
                    "type": "string",
                    "example": "zhangsan"
                }
            }
        },
        "dto.LoginDTO": {
            "type": "object",
            "required": [
                "password",
                "username"
            ],
            "properties": {
                "password": {
                    "description": "密码，用户登录密码",
                    "type": "string",
                    "example": "123456"
                },
                "username": {
                    "description": "用户名，用户登录账号",
                    "type": "string",
                    "example": "zhangsan"
                }
            }
        },
        "dto.UpdateUserDTO": {
            "type": "object",
            "properties": {
                "email": {
                    "description": "邮箱",
                    "type": "string",
                    "example": "zhangsan@example.com"
                },
                "password": {
                    "description": "密码，用户登录密码",
                    "type": "string",
                    "example": "123456"
                },
                "role": {
                    "description": "角色: 1=超级管理员 2=管理员 3=普通用户",
                    "allOf": [
                        {
                            "$ref": "#/definitions/model.UserRole"
                        }
                    ],
                    "example": 2
                },
                "status": {
                    "description": "状态: 1=正常 0=禁用",
                    "type": "integer",
                    "example": 1
                }
            }
        },
        "model.UserRole": {
            "type": "integer",
            "enum": [
                1,
                2,
                3
            ],
            "x-enum-comments": {
                "Admin": "管理员",
                "Normal": "普通用户",
                "SuperAdmin": "超级管理员"
            },
            "x-enum-varnames": [
                "SuperAdmin",
                "Admin",
                "Normal"
            ]
        },
        "vo.PageResponse": {
            "type": "object",
            "properties": {
                "items": {
                    "description": "数据项"
                },
                "page": {
                    "description": "当前页码",
                    "type": "integer",
                    "example": 1
                },
                "pageSize": {
                    "description": "每页大小",
                    "type": "integer",
                    "example": 10
                },
                "total": {
                    "description": "总数",
                    "type": "integer",
                    "example": 100
                },
                "totalPage": {
                    "description": "总页数",
                    "type": "integer",
                    "example": 10
                }
            }
        },
        "vo.Response": {
            "type": "object",
            "properties": {
                "code": {
                    "description": "响应码",
                    "type": "integer",
                    "example": 200
                },
                "data": {
                    "description": "响应数据"
                },
                "msg": {
                    "description": "响应消息",
                    "type": "string",
                    "example": "success"
                }
            }
        },
        "vo.UserVO": {
            "type": "object",
            "properties": {
                "cluster": {
                    "description": "集群名称",
                    "type": "string",
                    "example": "cluster-1"
                },
                "email": {
                    "description": "邮箱",
                    "type": "string",
                    "example": "zhangsan@example.com"
                },
                "namespace": {
                    "description": "命名空间",
                    "type": "string",
                    "example": "default"
                },
                "role": {
                    "description": "角色: 1=超级管理员 2=管理员 3=普通用户",
                    "allOf": [
                        {
                            "$ref": "#/definitions/model.UserRole"
                        }
                    ],
                    "example": 1
                },
                "status": {
                    "description": "状态: 1=正常 0=禁用",
                    "type": "integer",
                    "example": 1
                },
                "token": {
                    "description": "JWT令牌",
                    "type": "string",
                    "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                },
                "username": {
                    "description": "用户名",
                    "type": "string",
                    "example": "zhangsan"
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}